<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="#abcdef">



    <TextView
        android:id="@id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textSize="16sp"
        android:textColor="#212121"
        android:layout_constraintLeft_toLeftOf="parent"
        android:layout_constraintRight_toLeftOf="@+id/deleteButton"
         android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintBottom_toBottomOf="@+id/deleteButton"
        tools:text="Jai" />

    <ImageView
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintBottom_toBottomOf="@id/text"
        android:layout_constraintRight_toRightOf="parent"
        android:layout_constraintTop_toTopOf="@id/text"
        android:layout_constraintLeft_toRightOf="@id/text"
        android:padding="16dp"
        android:src="@drawable/ic_baseline_delete_forever_24"
        tools:layout_editor_absoluteX="331dp"
        tools:layout_editor_absoluteY="-10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>